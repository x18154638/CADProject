<section class="section">
  
	<div class="container">
	  
		<div class="columns is-centered">
		  
			<div class="column is-9">
			  
				<h1 class="title is-2"><%= @event.name %></h1>
				
				<h2 class="subtitle is-5 has-text-weight-light"><span class="icon is-small has-text-weight-lighter"><i class="fa fa-users"></i>&nbsp; &nbsp;</span> <%= link_to @event.team.name, team_path(@event.team) %></h2>
			
				<div class="level">
					<div class="level-left">
						<p>Created on
							<%= verbose_date(@event.created_at) %> by <%= @event.user.name %> / Modified
							<%= time_ago_in_words(@event.updated_at) %></p>
					</div>
					<div class="level-right">
						<div class="buttons">
							<%= link_to 'Edit Event', edit_event_path(@event), class:'button' %>
							<%= link_to 'Delete Event', @event, method: :delete, data: { confirm: 'Are you sure'}, class:'button is-danger is-outlined' %> 
						</div>
					</div>
				
				</div>
				<hr />
				
				<div class="content">
					<%= @event.description.html_safe %>
				</div>
			</div>
		</div>
	</div>
</section>